<%- include("header") -%>
<div class="container">
    <div class="card border-dark bg-light rg-dv1">

        <form action="/register" method="POST">

            <!-- LOGO -->
            <div class="rg-dv2 mb-3">
                <i class="fas fa-users fa-4x mr-3"></i>
                <h1 class="mt-2">Register</h1>
            </div>
            <!-- WARNNGS -->
            <%- include("partials/messages") %>
            <div class="row">
                <!-- FIRST NAME -->
                <div class="col-md-6 form-group">
                    <label for="first_name">First Name</label>
                    <input type="name" id="first_name" name="name" class="form-control" placeholder="Enter First Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <!-- LAST NAME -->
                <div class="col-md-6 form-group">
                    <label for="name2">Last Name</label>
                    <input type="name" id="name2" name="name2" class="form-control" placeholder="Enter Last Name"
                        value="<%= typeof name != 'undefined' ? name2 : '' %>" />
                </div>
            </div>

            <div class="row">
                <!-- EMAIL -->
                <div class="col-md-6 form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <!-- EMPLOYEE NUMBER -->
                <div class="col-md-6 form-group">
                    <label for="employee_no">Employee Number</label>
                    <input type="number" id="employee_no" name="number" class="form-control w-25"
                        placeholder="Enter 4 Digits" value="<%= typeof number != 'undefined' ? number : '' %>" />
                </div>
            </div>

            <div class="row">
                <!-- PASSWORD1 -->
                <div class="col-md-6 form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <!-- PASSWORD2 -->
                <div class="col-md-6 form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password" value="<%= typeof password != 'undefined' ? password2 : '' %>" />
                </div>
            </div>

            <!-- REGISTER BUTTON -->
            <button type="submit" class="btn btn-dark">
                Register
            </button>

            <!-- QUESTION -->
            <p class="mt-2">Already have an account? <a href="/login">Login</a></p>

        </form>

    </div>
</div>
<%- include("footer") -%>