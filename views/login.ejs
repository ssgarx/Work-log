<%- include("header") -%>
<div class="container">
    <div>
        <form action="/login" method="POST" class="card border-dark bg-light form-signin">

            <!-- LOGO -->
            <div class="lg-dv2 mb-3">
                <i class="fas fa-sign-in-alt fa-4x mr-3"></i>
                <h1 class="mt-2">Login</h1>
            </div>

            <!-- WARNNGS -->
            <%- include("partials/messages") %>

            <!-- EMAIL -->
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control " placeholder="Enter Email" />
            </div>

            <!-- PASSWORD1 -->
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control "
                    placeholder="Create Password" />
            </div>

            <!-- REGISTER BUTTON -->
            <button type="submit" class="btn btn-dark">
                Login
            </button>

            <!-- QUESTION -->
            <p class="mt-2">No account? <a href="/register">Register</a></p>
        </form>
    </div>
</div>
<%- include("footer") -%>